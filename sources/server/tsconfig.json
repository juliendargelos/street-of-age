{
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "esModuleInterop": false,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots" : ["./node_modules/@types"],
    "paths": {
      "~shared/*": [
        "../shared/*"
      ],
      "*": [
        "node_modules/",
        "src/types/*"
      ]
    }
  },

  "include": [
    "index.ts",
    "src/**/*"
  ]
}
