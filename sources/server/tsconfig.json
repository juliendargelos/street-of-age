{
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "esModuleInterop": false,
    "allowJs": true,
    "target": "es6",
    "lib": ["es2017", "dom","es6", "dom.iterable", "scripthost"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots" : [
      "./node_modules/@types",
      "./node_modules/@street-of-age",
    ],
    "paths": {
      "*": [
        "node_modules/",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
