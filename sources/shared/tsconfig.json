{
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "esModuleInterop": false,
    "target": "es6",
    "lib": ["es2017", "dom","es6", "dom.iterable", "scripthost"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "outDir": ".",
    "typeRoots" : [
      "./node_modules/@types"
    ],
    "paths": {
      "*": [
        "node_modules/"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.js"
  ]
}
