{
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "esModuleInterop": false,
    "target": "es6",
    "lib": ["es2017"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "typeRoots" : [
      "./@types",
      "./node_modules/@types"
    ],
    "paths": {
      "*": [
        "node_modules/"
      ]
    }
  },
  "include": [
    "**/*.ts"
  ]
}
